{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/bootstrap/dist/css/bootstrap.min.css') }}">
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/bundles/app/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('/bundles/app/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('/bundles/app/collection.js') }}"></script>
{% endblock javascripts %}

{% block body %}
    <div class="container">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-9" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('app_tasks_index') }}">To-Do</a>
                </div>

                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        {% block menu %}

                        {% endblock menu %}
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container">
        {% block content '' %}
    </div>
{% endblock body %}
